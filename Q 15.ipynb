    "#15. Create a 2d array with 1 on the border and 0 inside\n",
    "\n",
    "import numpy as np\n",
    "\n",
    "\n",
    "rows, columns = 5, 5  \n",
    "\n",
    "\n",
    "array = np.zeros((rows, columns), dtype=int)\n",
    "\n",
    "\n",
    "array[0, :] = 1  \n",
    "array[-1, :] = 1 \n",
    "array[:, 0] = 1  \n",
    "array[:, -1] = 1  \n",
    "\n",
    "print(array)\n"
   ]
